<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<%= render 'users/profile', user: @user, book: @book %>
		</div>

		<div class="col-xs-9">
			<h2>Books</h2>
			<!--books一覧 -->
			<table class="table table-hover table-inverse">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
						<th>Comments</th>
						<th>Favorites</th>
						<th colspan="3"></th>
					</tr>
				</thead>

				<tbody>
					<% @books.each do |book| %>
					<tr>
						<td>
							<%= link_to user_path(@user.id) do %>
							<%= attachment_image_tag book.user, :profile_image, size: "50x50", class: "img-circle pull-left profile-thumb", fallback: "no-image-mini.jpg" %>
							<% end %>
						</td>
						<td><%= link_to book.title, book_path(book) %></td>
						<td><%= book.body %></td>
						<td>
							<i class="fa fa-comment"><span class="glyphicon glyphicon-comment" aria-hidden="true"></span> <%= book.book_comments.count %></i>
						</td>
						<td>
							<i class="fa fa-heart"><span class="glyphicon glyphicon-heart" aria-hidden="true" style="color: red;"></span><%= book.favorites.count %></i>
						</td>
					</tr>
					<% end %>
				</tbody>
			</table>
			<!--books一覧 -->
		</div>
	</div>
</div>